{
    "Name": "_StreamAnalyticsJobName",
    "Type": "Microsoft.StreamAnalytics/streamingjobs",
    "Location": "_Location",
    "Properties": {
        "sku": {
            "name": "standard"
        },

        "EventsLateArrivalMaxDelayInSeconds": 5,
        "EventsOutOfOrderMaxDelayInSeconds": 0,
        "EventsOutOfOrderPolicy": "Adjust",

        "Inputs": [
            {
                "Name": "input01",
                "Properties": {
                    "Type": "Stream",
                    "DataSource": {
                        "Type": "Microsoft.ServiceBus/EventHub",
                        "Properties": {
                            "ConsumerGroupName": "_ConsumerGroupName",
                            "EventHubName": "_EventHubName",
                            "ServiceBusNamespace": "_ServiceBusNamespace",
                            "SharedAccessPolicyName": "_EventHubSharedAccessPolicyName",
                            "SharedAccessPolicyKey": "_EventHubSharedAccessPolicyKey"
                        }
                    },
                    "Serialization": {
                        "Type": "Json",
                        "Properties": {
                            "Encoding": "UTF8"
                        }
                    }
                }
            },
            {
                "Name": "input02",
                "Properties": {
                    "Type": "Reference",
                    "DataSource": {
                        "Type": "Microsoft.Storage/Blob",
                        "Properties": {
                            "Container": "container02",
                            "BlobName": "fabrikam/buildingdevice.json",
                            "StorageAccounts": [
                                {
                                    "AccountName": "_AccountName",
                                    "AccountKey": "_AccountKey"
                                }
                            ]
                        }
                    },
                    "Serialization": {
                        "Properties": {
                            "Encoding": "UTF8"
                        },
                        "Type": "Json"
                    }
                }
            }

        ],

        "Outputs": [
            {
                "Name": "output01",
                "Properties": {
                    "DataSource": {
                        "Type": "Microsoft.Storage/Blob",
                        "Properties": {
                            "BlobPathPrefix": "fabrikam",
                            "Container": "_Container",
                            "StorageAccounts": [
                                {
                                    "AccountName": "_AccountName",
                                    "AccountKey": "_AccountKey"
                                }
                            ]
                        }
                    },
                    "Serialization": {
                        "Type": "Json",
                        "Properties": {
                            "Encoding": "UTF8",
                            "Format": "LineSeparated"
                        }
                    }
                }
            },
            {
                "Name": "output02",
                "Properties": {
                    "DataSource": {
                        "Properties": {
                            "Database": "_DBName",
                            "Password": "_DBPassword",
                            "Server": "_DBServer",
                            "Table": "BuildingTemperature",
                            "User": "_DBUser"
                        },
                        "Type": "Microsoft.Sql/Server/Database"
                    },
                    "Serialization": null
                }
            }
        ],

        "Transformation": {
            "Name": "transformation01",
            "Properties": {
                "StreamingUnits": 1,
                "Query": "SELECT * INTO OUTPUT01 FROM input01 TIMESTAMP BY updateTime; SELECT AVG(I1.temperature) as temperature, Max(I1.updateTime) as endTime, I2.buildingId INTO output02 FROM input01 I1 TIMESTAMP BY updateTime JOIN input02 I2 On I1.deviceId = I2.deviceId GROUP BY TumblingWindow(s,5),  I2.buildingId"
            }
        }
    }
}
